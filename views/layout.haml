%html
  %head
    %title Maybe Later
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    /[if IE]
      %link{href:'/css/ie.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}
    %link{href:'/css/1140.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}
    %link{href:'/css/styles.css', rel: 'stylesheet', type: 'text/css', media: 'screen'}

    %script{src: '/js/css3-mediaqueries.js', type: 'text/javascript'}
    %script{src: '/js/jquery-1.7.1.min.js', type: 'text/javascript'}
    %script{src: '/js/jquery.infieldlabel.min.js', type: 'text/javascript'}
    %script{src: '/js/jquery.validate.min.js', type: 'text/javascript'}
    %script{src: '/js/application.js', type: 'text/javascript'}

    %body
      #menu
        - if user_signed_in?
          %a{href: '/me/new_link'} Add link
          %a{href: '/session/destroy'} Sign out
          #session-display
            = current_user.email
        - else
          %a{href: '/signin'} Sign in
      #flash
        - [:success, :notice, :alert, :error].each do |name|
          - if flash.has?(name)
            %div{id: "flash-#{name}", class: name, style: 'display:none;'}
              %p= flash[name]
      #header
        %h1 Maybe later
      #content
        .container
          .row
            .eightcol.last
              = yield